{
  "include": ["lib/**/*.ts", "lib/lib/Box.tsx"],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["es2022"],
    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "nodenext",

    "rootDir": "lib",
    "outDir": "build",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  }
}
